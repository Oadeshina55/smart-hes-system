# Production Environment Configuration
# Copy this file to .env and fill in actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://admin:YOUR_MONGO_PASSWORD@localhost:27017/smart-hes?authSource=admin

# Authentication
JWT_SECRET=YOUR_STRONG_JWT_SECRET_HERE_MIN_32_CHARS
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=https://yourdomain.com

# Meter Communication (Legacy)
METER_IP=192.168.1.100
METER_PORT=8080

# Python DLMS Service
PYTHON_DLMS_URL=http://localhost:8001
USE_PYTHON_DLMS=true

# Logging
LOG_LEVEL=info

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@yourdomain.com

# Redis (Optional - for session management)
# REDIS_URL=redis://localhost:6379

# Sentry (Optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
# ENABLE_METER_AUTO_DISCOVERY=false
# ENABLE_FIRMWARE_UPGRADE=false
# ENABLE_LOAD_PROFILE_AUTO_READ=true

# Security
# API_RATE_LIMIT=100
# API_RATE_WINDOW=15
